        table,
        th,
        td {
            border: 1px solid black;
        }
    </style>
</head>

<body>

    <div id="contenedor">

        <h1>
            Bienvenido
        </h1>

        <button @click="onAction = (onAction)?false:true">
            Ocultar
        </button>
        <button @click="offAction = (offAction)?false:true">
            AÃ±adir
        </button>

        <br>

        <table v-if="onAction == false" v-if="close == true">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Username
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        website
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>

            <tbody>

                <tr v-for="user,index in users" v-bind:key="user.id">
                    <td>
                        {{ index + 1 }}
                    </td>
                    <td>
                        {{ user.name }}
                    </td>
                    <td>
                        {{ user.username }}
                    </td>
                    <td>
                        {{ user.email }}
                    </td>
                    <td>
                        {{ user.phone }}
                    </td>
                    <td>
                        {{ user.website }}
                    </td>
                    <td>
                        <button @click="editar">
                            Edit
                        </button>
                        <button @click="eliminar(user.id)">
                            Delete

                        </button>
                    </td>
                </tr>

            </tbody>


        </table>
        <! -- v-else -->
            <div id="app">
                <form v-if="offAction == true">
                    <fieldset>
                        <legend>
                            Datos personales
                        </legend>

                        <label>
                            Name
                        </label>
                        <input type="text" v-model="news.name">
                        <br>
                        <label>
                            Username
                        </label>
                        <input type="text" v-model="news.username">
                        <br>
                        <label>
                            Email
                        </label>
                        <input type="text" v-model="news.email">
                        <br>
                        <label>
                            Phone
                        </label>
                        <input type="text" v-model="news.phone">
                        <br>
                        <label>
                            Website
                        </label>
                        <input type="text" v-model="news.website">
                        <br>
                        <button @click="guardar">
                            Guardar
                        </button>
                        <button @click="offAction = (offAction)?false:true">
                            Cancelar
                        </button>
                    </fieldset>
                </form>
            </div>

    </div>

    <script src="https://unpkg.com/vue@3">
        import axios from "axios";
    </script>
    <script type="text/javascript">
        
        const { createApp } = Vue

        const app = createApp({
            data() {

                return {

                    users: null,
                    onAction: false,
                    offAction: false,
                    close: true,
                    news: {
                        name: '',
                        username: '',
                        email: '',
                        phone: '',
                        website: '',
                    }


                }
            },

            methods: {
                guardar() {
                    this.offAction = false
                    this.users.push(this.news);
                    this.news = {
                        name: '',
                        username: '',
                        email: '',
                        phone: '',
                        website: '',

                    }
                    alert(this.id)

                },
                editar() {

                    this.news(this.index)

                    alert(this.index)

                },
                eliminar(id) {
                    this.users.splice(this.id, 1)
                },
            },
            mounted() {


                fetch('users.json')
                    .then((res) => res.json())
                    .then((json) => (this.users = json))
                    .catch((err) => (alert('no data')));

            }
        }).mount('#contenedor')

    </script>
